{
    "name": "csims/notification-system",
    "description": "CSIMS Notification System with automated triggers",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "phpmailer/phpmailer": "^6.10",
        "phpoffice/phpspreadsheet": "^1.29"
    },
    "suggest": {
        "phpmailer/phpmailer": "^6.0 - For advanced email features and SMTP support",
        "twilio/sdk": "^6.0 - For SMS notifications via Twilio"
    },
    "autoload": {
        "psr-4": {
            "CSIMS\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"if (!file_exists('logs')) mkdir('logs', 0755, true);\"",
            "@php -r \"if (!file_exists('temp')) mkdir('temp', 0755, true);\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
