{
    "functions": {
        "api/*.php": {
            "runtime": "vercel-php@0.7.0"
        },
        "*.php": {
            "runtime": "vercel-php@0.7.0"
        },
        "views/**/*.php": {
            "runtime": "vercel-php@0.7.0"
        },
        "controllers/**/*.php": {
            "runtime": "vercel-php@0.7.0"
        }
    },
    "routes": [
        {
            "handle": "filesystem"
        },
        {
            "src": "/admin/(.*)",
            "dest": "/views/admin/$1"
        },
        {
            "src": "/auth/(.*)",
            "dest": "/views/auth/$1"
        },
        {
            "src": "/controllers/(.*)",
            "dest": "/controllers/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/index.php"
        }
    ]
}