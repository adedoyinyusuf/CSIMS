# CSIMS Configuration File
# Copy this file to .env and update the values for your environment

# Application Configuration
APP_NAME="CSIMS"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/CSIMS
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_KEY=

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=csims
DB_USERNAME=root
DB_PASSWORD=

# Database Charset (optional)
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_TIMEOUT=3600
SESSION_ENCRYPT=false
SESSION_COOKIE=csims_session
SESSION_DOMAIN=
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=Lax

# Security Configuration
RATE_LIMIT_LOGIN=5
RATE_LIMIT_LOGIN_WINDOW=300
RATE_LIMIT_API=100
RATE_LIMIT_API_WINDOW=60

# Password Requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# Account Lockout
LOCKOUT_MAX_ATTEMPTS=5
LOCKOUT_DURATION=1800

# Cache Configuration
CACHE_DRIVER=file
CACHE_PATH=storage/cache
CACHE_PREFIX=csims
CACHE_DEFAULT_TTL=3600

# Logging Configuration
LOG_CHANNEL=file
LOG_PATH=storage/logs/csims.log
LOG_LEVEL=info
LOG_MAX_FILES=30

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@csims.local
MAIL_FROM_NAME="CSIMS System"
