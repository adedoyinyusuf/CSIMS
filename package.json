{
  "name": "csims",
  "version": "2.0.0",
  "description": "Cooperative Society Information Management System",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm:watch-css\" \"npm:watch-js\"",
    "watch-css": "tailwindcss -i ./assets/css/input.css -o ./assets/css/tailwind.css --watch",
    "watch-js": "esbuild assets/js/app.js --bundle --outfile=assets/js/dist/app.min.js --sourcemap --watch",
    "build": "npm run build-css && npm run build-js",
    "build-css": "tailwindcss -i ./assets/css/input.css -o ./assets/css/tailwind.css --minify",
    "build-js": "esbuild assets/js/app.js --bundle --outfile=assets/js/dist/app.min.js --minify",
    "build-css-legacy": "tailwindcss -i ./assets/css/input.css -o ./assets/css/tailwind.css --watch"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "esbuild": "^0.19.0",
    "concurrently": "^8.2.0"
  },
  "keywords": [
    "cooperative",
    "management",
    "php",
    "mysql"
  ],
  "author": "CSIMS Team",
  "license": "MIT"
}